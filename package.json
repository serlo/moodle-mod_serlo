  "license": "GNU GPL v3",
  "publish": false,
  "devDependencies": {
    "esbuild": "^0.21.3",
    "grunt": "^1.6.1",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-sass": "^2.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-load-gruntfile": "^0.0.2"
  },
  "dependencies": {
    "@serlo/editor-web-component": "0.0.9"
  }
}
